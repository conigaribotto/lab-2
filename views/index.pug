html(lang='es')
  head
    meta(charset='utf-8')
    title Calendario de Turnos
    script(src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js')  // FullCalendar CDN
    link(rel='stylesheet', href='/css/styles.css')
  body
    include partials/_header

    // Selector de especialidad
    label(for='especialidad') Selecciona una especialidad:
    select#especialidad(name='especialidad')
      option(value='') -- Selecciona --

    // Calendario
    div#calendar

    // Contenedor para mostrar los turnos
    div#turnos-container
      h2 Turnos disponibles
      div#turnos-container

    div#modalAgendarTurno.modal.hidden
      div.modal-content
        h2 Agendar Turno
        label(for='dniPaciente') DNI del Paciente:
        input#dniPaciente(type='text', placeholder='Ingrese DNI')
        p#modal-medico
        p#modal-hora
        p#modal-fecha
        div.modal-actions
          button#cancelarBtn(class='btn-cancelar') Cancelar
          button#agendarBtn(class='btn-agendar') Agendar

    script(src='/js/index.js')
